            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "skip stl libs",
                    "text": "skip -gfi /usr/include/c++/11/*"
                },
                {
                    "text": "skip -gfi /usr/include/c++/11/bits/*"
                }
            ]
        }
    ]
